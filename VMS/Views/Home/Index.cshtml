@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> signInManager;

@{
    ViewData["Title"] = "Home Page";
}
<div style="margin:0;">
    <style>

        .centered {
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            margin: 0;
        }

        .container-specific {
            position: relative;
            text-align: center;
            color: white;
            margin-left: 0;
            margin-right: 0;
            margin-bottom: 45px;
        }
    </style>
    <div>

        <div class="container-specific">
            <div style="background-color:black;">
                <img class="d-block w-100 opacity-50" src="~/Images/8.png" alt="volunteers">
            </div>

            <div class="centered">
                <div class="jumbotron">

                    <h1 class="display-4" style="color:white;">Become a Volunteer</h1>
                    <p class="lead">As a nonprofit, our core mission is to help teach empathy and social responsibility to young people.</p>
                    <hr class="my-4">
                    <p>We envision a more compassionate world, and believe that encouraging and making it easier for kids, teens, and families to engage in volunteer service builds empathy, compassion, communication, and teamwork.</p>
                    <p class="lead">

                        <a class="btn rounded-pill bg-info" style="text-decoration-line:none; background-color:aquamarine;" asp-area="" asp-controller="Opportunities" asp-action="List">Explore now</a>
                    </p>
                </div>
            </div>
        </div>
    </div>

</div>

<!-- Register Cards Only shown if user is not logged in -->
@if (signInManager.IsSignedIn(User))
{
<div>
    <h2 class="text-center">Check Us Out!</h2>
    <hr class="my-4">
</div>
    <div class="row gx-4 gx-lg-5">
        <div class="col-md-6 mb-5">
            <div class="card h-100 rounded" style="text-align:center;">
                <div class="card-body">
                    <h2 class="card-title">View Opportunities</h2><hr />
                    <p class="card-text">Browse opportunities posted by nonprofits to find the best fit for you!</p>
                </div>
                <div class="card-footer"><a class="btn btn-outline-success btn-sm rounded" asp-controller="Opportunities" asp-action="List">Browse</a></div>
            </div>
        </div>
        <div class="col-md-6 mb-5">
            <div class="card h-100" style="text-align:center;">
                <div class="card-body">
                    <h2 class="card-title">About Us</h2><hr />
                    <p class="card-text">Get to know more about VolunTEEN and what we hope to accomplish.</p>
                </div>
                <div class="card-footer"><a class="btn btn-outline-success btn-sm rounded-1" asp-controller="Home" asp-action="AboutUs">Explore</a></div>
            </div>
        </div>

    </div>
}
else
{
    <div>
        <h2>Sign Up Today!</h2>
    </div>
    <div class="row gx-4 gx-lg-5">
        <div class="col-md-6 mb-5">
            <div class="card h-100 rounded" style="text-align:center;">
                <div class="card-body">
                    <h2 class="card-title">Volunteers</h2><hr />
                    <p class="card-text">Sign up today! Volunteers are always welcome to join our platform and connect with nonprofits for their next adventure.</p>
                </div>
                <div class="card-footer"><a class="btn btn-outline-success btn-sm rounded" asp-area="Identity" asp-page="/Account/VolunteerRegister">Register</a></div>
            </div>
        </div>
        <div class="col-md-6 mb-5">
            <div class="card h-100" style="text-align:center;">
                <div class="card-body">
                    <h2 class="card-title">Nonprofit</h2><hr />
                    <p class="card-text">Are you a not for profit organization looking to get your opportunities out to the public? Sign up today and connect with potential volunteers.</p>
                </div>
                <div class="card-footer"><a class="btn btn-outline-success btn-sm rounded-1" asp-area="Identity" asp-page="/Account/NonprofitRegister">Register</a></div>
            </div>
        </div>

    </div>
}


