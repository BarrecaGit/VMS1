@model IEnumerable<VMS.Models.Opportunity>

@{
    ViewData["Title"] = "Your Posted Opportunities";
}


    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <link rel="stylesheet" asp-href-include="lib/font-awesome/css/*.css" />

<div class="card">
    <div class="card-header">
        <h4>Manage your posts here</h4>
    </div>
    <div class="card-body">
            <div class="col-md-12">
                <a type="button" class="btn btn-outline-success" asp-action="Create">Add New+</a>
                <button type="button" class="btn btn-outline-primary ml-3 dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Filter
                </button>
                <div class="dropdown-menu">
                    <a type="button" class="dropdown-item" asp-action="">Most Recent</a>
                    <div class="dropdown-divider"></div>
                    <a type="button" class="dropdown-item" asp-action="Index">All</a>
                </div>

                
                @*<form class="form-group mb-5" asp-action="ShowSearchResults">
                    <div class="form-row">
                        <label class="sr-only" for="SearchPhrase"></label>
                        <input name="SearchPhrase" class="form-control" id="inlineFormInputName" placeholder="Search">
                    </div>
                </form>*@
            </div>

        <div class="table-responsive">
            <table class="table table-striped table-bordered table-condensed">
                <thead>
                    <tr>
                        <th>
                            Name
                        </th>
                        <th>
                            Location
                        </th>
                        <th>
                             Description
                        </th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody class="table table-striped">
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.opportunityName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.location)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.description)
                        </td>
                        <td class="text-center">
                            <div class="btn-group">
                                <a style="text-decoration: none" class="btn-sm btn-info m-sm-1" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a style="text-decoration: none" class="btn-sm btn-info m-sm-1" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                <a style="text-decoration: none" class="btn-sm btn-danger m-sm-1" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </div>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
