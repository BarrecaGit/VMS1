@model VMS.Models.Opportunity

@{
    ViewData["Title"] = "Create";
}


<div class="card">
    <div class="card-header">
        <h4>Create Opportunity</h4>
    </div>
    <div class="card-body">
        <div class="container-fluid">
            <div class="row">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group col-md-5">
                        <label asp-for="opportunityName" class="control-label">Name</label>
                        <input asp-for="opportunityName" class="form-control" />
                        <span asp-validation-for="opportunityName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-5">
                        <label asp-for="location" class="control-label">Location</label>
                        <input asp-for="location" class="form-control" />
                        <span asp-validation-for="location" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="description" class="control-label">Add a description</label>
                        <textarea style="resize: none;" asp-for="description" class="form-control" rows="4" cols="100"></textarea>
                        <span asp-validation-for="description" class="text-danger"></span>
                    </div><hr />

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success mr-3" />
                        <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
</div>
