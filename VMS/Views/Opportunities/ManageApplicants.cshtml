@model IEnumerable<VMS.Models.Application>
@{
    ViewData["Title"] = "Manage Applicants";
}

<h2>Manage Applicants for your Posted Opportunities</h2>

<table>
    <thead>
        <tr>
            <th>Volunteer Name</th>
            <th>Opportunity</th>
            <th>Approve</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var application in Model)
        {
            <tr>
                <td width="50%">
                    @application.volunteerName
                </td>
                <td width="50%">
                    @application.oppName
                </td>
                <td>
                    @if(application.status)
                        {
                            <a class="btn btn-danger" asp-route-appID="@application.id" asp-action="changeStatus" asp-controller="Opportunities">Deny</a>
                        }
                     else
                        {
                            <a class="btn btn-primary" asp-route-appID="@application.id" asp-action="changeStatus" asp-controller="Opportunities">Approve</a>
                        }
                </td>
            </tr>
        }
    </tbody>
</table>
