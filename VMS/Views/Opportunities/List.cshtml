            <div class="dropdown-divider"></div>
            <a type="button" class="dropdown-item" asp-action="List">All</a>
        </div>

        @using (Html.BeginForm())
            {
                <p>
                    Find by name: @Html.TextBox("SearchString")
                    <input type="submit" value="Search" />
                </p>
            }

