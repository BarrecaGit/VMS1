@model OpportunitiesListViewModel

@{
    ViewData["Title"] = "Your Archived Posts";
}

<style>
</style>
<ol class="breadcrumb">
    <li class="breadcrumb-item"><a asp-area="" asp-controller="Home" asp-action="Index">Home</a></li>
    <li class="breadcrumb-item active">Manage Archived</li>
</ol>

<!--Table-->
<div class="card">
    <div class="card-header">
       <h2 >@ViewData["Title"]</h2>
       <p>These posts are not active.</p>
    </div>
    <div class="card-body">
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>Opportunity Name</th>
                    <th>Archived Date</th>
                    <th>Location</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var p in Model.Opportunities)
                {
                    <tr>
                        <td>@p.OpportunityName</td>
                        <td>@p.ArchivedDate</td>
                        <td>@p.City, @p.State</td>
                        <td>
                            <a class="btn btn-sm btn-info" type="button" asp-action="Edit" asp-route-id="@p.Id">Edit</a>
                            <a class="btn btn-sm btn-info" type="button" asp-action="Details" asp-route-id="@p.Id">Details</a>
                            <input type="submit" asp-action="Delete" asp-route-id="@p.Id" value="Delete" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this?')" />

                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a class="btn btn-info" asp-action="Index">Back</a>
    </div>
</div>