@model VMS.Models.Opportunity

@{
    ViewData["Title"] = "Edit";
}


<div class="card">
    <div class="card-header">
        <h4>Edit Opportunity <span class="text-primary">@Html.DisplayFor(model => model.opportunityName) for @Html.DisplayFor(model => model.center)</span></h4>
    </div>
    <div class="card-body">
        <div class="container-fluid">
            <div class="row">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="opportunityName" class="control-label">Opportunity Name</label>
                        <input asp-for="opportunityName" class="form-control" />
                        <span asp-validation-for="opportunityName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="center" class="control-label">Center</label>
                        <input asp-for="center" class="form-control" />
                        <span asp-validation-for="center" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="datePosted" class="control-label">Date Posted</label>
                        <input asp-for="datePosted" class="form-control" />
                        <span asp-validation-for="datePosted" class="text-danger"></span>
                    </div><hr />

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-outline-success mr-3" />
                        <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
