@model VMS.Models.Opportunity

@{
    ViewData["Title"] = "Edit";
}


<div class="card">
    <div class="card-header">
        <h4>Edit Opportunity <span class="text-primary">@Html.DisplayFor(model => model.opportunityName)</span> in <span class="text-uppercase text-primary">@Html.DisplayFor(model => model.location)</span></h4>
    </div>
    <div class="card-body">
        <div class="container-fluid">
            <div class="row">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group col-md-5">
                        <label asp-for="opportunityName" class="control-label">Opportunity Name</label>
                        <input asp-for="opportunityName" class="form-control" />
                        <span asp-validation-for="opportunityName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-5">
                        <label asp-for="location" class="control-label">Location</label>
                        <input asp-for="location" class="form-control" />
                        <span asp-validation-for="location" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="description" class="control-label">Description</label>
                        @*<input asp-for="description" class="form-control" />*@
                        <textarea style="resize: none;" asp-for="description" class="form-control" rows="4" cols="100"></textarea>
                        <span asp-validation-for="description" class="text-danger"></span>
                    </div><hr />

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-outline-success mr-3" />
                        <a class="btn btn-outline-primary" asp-action="Index">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
