@model VMS.Models.Opportunity

@{
    ViewData["Title"] = "Details";
}

<div class="card">
    <div class="card-header">
        <h4>Opportunity Details</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                Opportunity Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.opportunityName)
            </dd>
            <dt class="col-sm-2">
                Center
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.center)
            </dd>
            <dt class="col-sm-2">
                Date Posted
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.datePosted)
            </dd>
        </dl>
    </div>
</div>
