@model VMS.Models.Opportunity
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> signInManager;

@{
    ViewData["Title"] = "Details";
}

<div class="card">
    <div class="card-header">
        <h4>Opportunity Details</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2">
                Opportunity Name
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.opportunityName)
            </dd>
            <dt class="col-sm-2">
                Location
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.location)
            </dd>
            <dt class="col-sm-2">
                Description
            </dt>
            <dd class="col-sm-5">
                @Html.DisplayFor(model => model.description)
            </dd>
        </dl>
    </div>
</div>
<div class="mt-3">
    <div class="col-md-12">
        <a class="btn btn-primary" asp-action="Browse">Back to Browse</a>
        @if (signInManager.IsSignedIn(User))
        {
            <a class="btn btn-outline-warning" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
            <a class="btn btn-outline-warning" asp-action="Index">Manage your posts</a>
        }
    </div>
    


</div>



