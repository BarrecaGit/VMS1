@model VMS.Models.Opportunity
@using Microsoft.AspNetCore.Identity;
@inject SignInManager<ApplicationUser> signInManager;

@{
    ViewData["Title"] = "PublicDetails";
}

<div class="container py-4">

    <!--Header-->
    <div class="p-5 mb-4 bg-light rounded-3 shadow">
        <div class="container-fluid py-5">
            <h1 class="display-5 fw-bold">@Html.DisplayFor(model => model.OpportunityName)</h1>
            <p class="lead col-md-8 fs-4">@Html.DisplayFor(model => model.Location)</p>
            <a class="btn btn-lg btn-primary btn-rounded" asp-area="" asp-controller="Opportunities" asp-action="Apply">Apply</a>
        </div>
    </div>

    <!--Description & Date posted-->
    <div class="p-2 mb-4 bg-light rounded-3 shadow">
        <div class="container-fluid py-5">
            <p class="fs-5">About this event</p>
            <p class="col-md-8 fs-6">@Html.DisplayFor(model => model.Description)</p>
        </div>
        <div class="container-fluid text-sm-right text-right">
            <p class="text-muted">Posted: @Html.DisplayFor(model => model.CreateDate)</p>
        </div>
    </div>

    <!--Location & Contact details-->
    <div class="row align-items-md-stretch">
        <div class="col-md-6">
            <div class="h-100 p-5 text-white bg-dark rounded-3">
                <h2>Location</h2>
                <p>@Html.DisplayFor(model => model.Location)</p>
                <a class="btn btn-outline-light" target="_blank" href="https://www.google.com/maps/search/?api=1/@Model.Location">Map</a>
            </div>
        </div>

        <div class="col-md-6">
            <div class="h-100 p-5 bg-light border rounded-3">
                <h2>Contact Information</h2>
                <ul>
                    <li>@Html.DisplayFor(model => model.CreateUser.FirstName)</li>
                    <li>@Html.DisplayFor(model => model.CreateUser.Email)</li>
                    <li>@Html.DisplayFor(model => model.CreateUser.PhoneNumber)</li>
                </ul>
                <a class="btn btn-secondary" href="mailto: @Model.CreateUser.Email">Contact</a>
            </div>
        </div>
    </div>
    
    <div class="d-flex justify-content-center pt-2">
        <a class="btn btn-primary" asp-area="" asp-controller="Opportunities" asp-action="Browse">Back</a>
    </div>


</div>

