@using VMS.Models.ViewModels
@model List<UserListViewModel>
@{
    ViewData["Title"] = "User List";
}

<h1>Volunteers</h1>
<table class="table table-hover">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone Number</th>
            <th>Email</th>
            <th>Address</th>
            <th>Zip</th>
        </tr>
    </thead>
    <tbody>

        @foreach (var user in Model)
            @if (user.Roles.Contains("Volunteer"))
            {
        <tr>
            <td>@user.firstName</td>
            <td>@user.lastName</td>
            <td>@user.phone</td>
            <td>@user.Email</td>
            <td>@user.address</td>
            <td>@user.zip</td>
            <td style="width:10%"><a class="btn btn-primary" asp-action="EditUser" asp-controller="admin" asp-route-id="@user.Id">Edit User</a></td>
            <td style="width:10%">
                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete user: @user.Email')">Delete User</button>
                </form>
            </td>
        </tr>
            }

        </tbody>
    </table>

    <h1>Unverified Nonprofits</h1>
    <table class="table table-hover">
        <thead>
            <tr>
                <th>Email</th>
            </tr>
        </thead>
        <tbody>

            @foreach (var user in Model)
                @if (user.Roles.Contains("Organization"))
                {
                    <tr>
                        <td>@user.Email</td>
                        <td style="width:10%"><a class="btn btn-primary" asp-action="EditUser" asp-controller="admin" asp-route-id="@user.Id">Edit User</a></td>
                        <td style="width:10%">
                            <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete user: @user.Email')">Delete User</button>
                            </form>
                        </td>
                    </tr>
                }

            </tbody>
        </table>

        <h1>Verified Nonprofits</h1>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>

                @foreach (var user in Model)
                    @if (user.Roles.Contains("Organization (Verified)"))
                    {
                        <tr>
                            <td>@user.Email</td>
                            <td style="width:10%"><a class="btn btn-primary" asp-action="EditUser" asp-controller="admin" asp-route-id="@user.Id">Edit User</a></td>
                            <td style="width:10%">
                                <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                                    <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete user: @user.Email')">Delete User</button>
                                </form>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>

            <h1>Admins</h1>
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Email</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var user in Model)
                        @if (user.Roles.Contains("Admin"))
                        {
                            <tr>
                                <td>@user.Email</td>
                                <td style="width:10%"><a class="btn btn-primary" asp-action="EditUser" asp-controller="admin" asp-route-id="@user.Id">Edit User</a></td>
                                <td style="width:10%">
                                    <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete user: @user.Email')">Delete User</button>
                                    </form>
                                </td>
                            </tr>
                        }

                    </tbody>
                </table>