@using Microsoft.AspNetCore.Identity;
@model IEnumerable<IdentityUser>
@{
    ViewBag.Title = "All Users";
}

<h1>Volunteer List</h1>

@if (Model.Any())
{
    <table class="table table-striped">
        <tr>
            <th>Username</th>
            <th></th>
            <th></th>
        </tr>
        @foreach (var user in Model)
        {

    <tr>
        <td>@user.UserName</td>
        <td><a class="btn btn-primary" asp-action="EditUser" asp-controller="admin" asp-route-id="@user.Id">Edit User</a></td>
        <td>
            <form asp-action="DeleteUser" asp-route-id="@user.Id" method="post">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete user: @user.UserName')">Delete User</button>
            </form>
        </td>
    </tr>

        }
    </table>
}